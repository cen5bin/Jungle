<?xml version="1.0" encoding="UTF-8"?>
<configuration status="error">
	<Appenders>
		<Console name="Console" target="SYSTEM_ERR">
			<PatternLayout>
				<pattern>
					%highlight{%-5level %d{yyyy-MM-dd HH:mm:ss} %l: %m%n}
				</pattern>
			</PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console"/>
		</Root>
	</Loggers>
</configuration>